---
/* Icons */
import IcoGithub from "../components/icons/IcoGithub.astro";
import IcoLinkedin from "../components/icons/IcoLinkedin.astro";
import IcoMail from "../components/icons/IcoMail.astro";
/* End Icons */

import Counter from "../components/utils/Counter.astro";
import ViaLactea from "../components/ViaLactea.astro";
import Layout from "../layout/Layout.astro";
---

<Layout>
    <div class="py-[50px] relative">
        <!-- Background -->
        <div class="opacity-70 flex justify-center absolute-center-x top-0 pt-[50px]">
            <ViaLactea />
        </div>

        <div class="z-10 relative">
            <div class="text-center col">
                <h1 class="text-[4rem] font-semibold whitespace-pre">
                    Hi, i am 
                    <span class="text-transparent bg-clip-text bg-gradient-to-r w-fit from-purple-500 via-pink-400 to-yellow-300">Carlos Maza</span> 
                </h1>
                
                <div class="row items-center gap-4 rounded-full py-1 px-6 mx-auto bg-slate-900">
                    <div class="relative w-2 h-2 bg-emerald-300 rounded-full">
                        <div class="absolute w-2 h-2 bg-emerald-400 rounded-full animate-ping"></div>
                    </div>

                    available to work
                </div>
                
                <p class="text-slate-300/90 max-w-[600px] text-md lg:text-lg block mx-auto mt-2 font-light [&>strong]:font-semibold">
                    <strong>Frontend developer</strong> capable of creating, modifying, and optimizing functions, ensuring high performance and <strong>an excellent user experience.</strong>
                </p>
    
                <div class="row gap-2 justify-center mt-10">
                    <a href="mailto:mazagonzalez61@gmail.com" class="btn text-black bg-gray-200 hover:bg-white">
                        Contactame
    
                        <IcoMail class="w-5 h-5 stroke-black" />
                    </a>
    
                    <a 
                        href="https://www.linkedin.com/in/carlos-arturo-maza-gonzalez-254b70249/" 
                        target="_blank" 
                        class="bg-[#0a66c2] hover:bg-[#2c74bd] btn"
                    >
                        <IcoLinkedin class="w-5 h-5 fill-white relative" />  
                    </a>
    
                    <a 
                        href="https://github.com/Mazagonzalez" 
                        target="_blank" 
                        class="bg-black hover:bg-gray-900 btn"
                    >
                        <IcoGithub class="w-5 h-5 fill-white relative" />
                    </a>
                </div>
            </div>
    
            <div class="max-w-5xl bg-slate-900 rounded-3xl p-8 mx-auto mt-20">
                <div class="grid grid-cols-4 divide-x divide-white/10">
                    <Counter id={ 1 } title="Years of Experience" />
                    <Counter id={ 2 } title="Bugs Fixed" />
                    <Counter id={ 3 } title="Programming Hours" />
                    <Counter id={ 4 } title="Cups of Coffee Consumed" />
                </div>
            </div>
        </div>
    </div>
</Layout>
