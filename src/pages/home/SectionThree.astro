---
import IcoLight from "../../components/icons/IcoLight.astro";
import CardSkill from "../../components/utils/CardSkill.astro";
import SquareIcon from "../../components/utils/SquareIcon.astro";
---

<section id="skills" class="pt-[100px] lg:pt-[150px]">
    <div class="col items-center gap-3 relative">
        <SquareIcon>
            <IcoLight class="size-10 stroke-white" />
        </SquareIcon>

        <div class="z-[1] text-center">
            <h2 class="subtitle">My Skills</h2>
            <p class="text-center max-w-[600px] text-slate-300/90 font-light [&>strong]:font-semibold mt-3">
                Skilled in <strong>modern web development technologies</strong>, with a focus on creating <strong>high-performance, responsive applications</strong> and delivering seamless user experiences.
            </p>
        </div>

        <div class="absolute w-[40%] border-t border-transparent border-l left-0 rounded-tl-3xl h-1/2 top-10 line-l"></div>
        <div class="absolute w-[40%] border-t border-transparent border-r right-0 rounded-tr-3xl h-1/2 top-10 line-r"></div>
    </div>

    <div class="flex sm:flex-col w-full gap-4 justify-center items-center mt-14 z-[1] relative">
        <div class="flex flex-col sm:flex-row gap-4">
            <CardSkill ico="laravel" />
            <CardSkill ico="astro" />
            <CardSkill ico="react" />
            <CardSkill ico="js" />
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
            <CardSkill ico="tailwind" />
            <CardSkill ico="bootstrap" />
            <CardSkill ico="sass" />
            <CardSkill ico="css" />
            <CardSkill ico="html" />
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
            <CardSkill ico="sublime" />
            <CardSkill ico="git" />
            <CardSkill ico="github" />
        </div>
    </div>
</section>